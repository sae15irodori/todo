<h1>タスク一覧</h1>
<table>
  <thead>
    <tr>
      <th>タスク名</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td>
          <%= task.title %>
          </td>
        <td>
          <%= link_to 'タスク編集', edit_task_path(task.id) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to '追加', new_task_path %>